.side_bar
  .side_bar__top
    .side_bar__top__contents
      .side_bar__top__contents__name
        = current_user.name
      .side_bar__top__contents__btns
        =link_to new_group_path, class: "side_bar__top__contents__btns__icon" do
          =icon('far','edit',class: "side_bar__top__contents__btns__icon side_bar__top__contents__btns__icon--edit")
        = link_to edit_user_path(current_user) do
          =icon('fas','cog',class: "side_bar__top__contents__btns__icon side_bar__top__contents__btns__icon--cog")
  .side_bar__main
    - current_user.groups.each do |group|
      .side_bar__main__group
        = link_to group_messages_path(group) do
          .side_bar__main__group__name
            = group.name
          .side_bar__main__group__message
            = group.show_last_message